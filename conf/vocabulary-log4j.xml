<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="true" threshold="debug" xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="LOCAL" class="org.apache.log4j.AsyncAppender">
        <param name="BufferSize" value="256"/>
        <appender-ref ref="logfile"/>
    </appender>

    <appender name="logfile" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/vocabulary.log"/>
        <param name="Append" value="true"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[Thread:%t] %d{[MMMM d, yyyy HH:mm a]} [%p] %m%n"/>
        </layout>
    </appender>

    <root>
        <priority value ="debug"/>
        <appender-ref ref="LOCAL"/>
    </root>

</log4j:configuration>